{
	"tslint.configFile": "tsconfig.json",
	"fileheader.configObj": {
		"autoAdd": false,
		"annotationStr": {
			"head": "/*", // 自定义注释头部
			"middle": " * @", // 自定义注释中间部分(注意空格,这也是最终生成注释的一部分)
			"end": " */", // 自定义注释尾部
			"use": false // 是否使用自定义注释符号
		},
		"language": ["js", "jsx", "ts", "tsx", "scss"],
		"headInsertLine": {
			"js": 2, // js后缀的文件，在第二行插入文件头部注释
			"jsx": 2,
			"ts": 2,
			"tsx": 2
		},
		"specialOptions": {
			"Date": "Date",
			"LastEditTime": "LastEditTime",
			"LastEditors": "LastEditors"
		},
		"timeNoDetail": false, // 设为true精确到日期
		"autoAlready": true, // 默认开启:只让支持的语言，自动添加头部注释. false:所有文件自动添加头部注释
		"prohibitAutoAdd": ["json", "md"], // 禁止.json .md文件，自动添加头部注释
		"autoAddLine": 100 // 默认文件超过100行就不再自动添加头部注释
	},
	// 文件头部注释
	"fileheader.customMade": {
		"Author": "batman",
		"Date": "Do not edit",
		"LastEditors": "batman",
		"LastEditTime": "Do not Edit",
		"Description": ""
	},
	// 函数注释
	"fileheader.cursorMode": {
		"category": "",
		"name": "",
		"param": "",
		"return": "",
		"usage": ""
	},
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.wordWrap": "wordWrapColumn",
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
	"editor.tabSize": 2,
	"eslint.enable": true,
	"eslint.format.enable": true,
	"prettier.requireConfig": true,
	"prettier.printWidth": 200,
	"prettier.singleQuote": true,
	"prettier.tabWidth": 2,
	"prettier.useTabs": true
}
